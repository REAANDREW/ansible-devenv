# vim:ft=ansible:
---
- hosts: all
  sudo: true
  vars:
  - jdk:
      version: '8'
  - gradle:
      version: '2.7'
  - golang:
      version: '1.7'
  - nvm:
      user: 'vagrant'
      version: v0.26.1
      node_version: '4'
  - vim_settings:
    - 'colorscheme jellybeans'
  - vim_key_bindings:
    - 'nnoremap <space> za'
  - vim_plugins:
    - tomtom/tlib_vim     # what is this one for?
    - ryanoasis/vim-webdevicons
    - nanotech/jellybeans.vim
  - npm_globals:
    - gulp
    - grunt-cli
    - nesh
    - nodemon
  roles: 
    - vim
    - host
    - shell
    - emacs
    - c_development
    - node_development
    - go_development
    - jvm_development 
